<module xmlns="urn:jboss:module:1.8" name="org.wildfly.reactive.messaging.kafka.bridge">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <artifact name="${org.wildfly:wildfly-microprofile-reactive-messaging-kafka-api}">
            <filter>
                <!--
                    We expose these classes in the API jar so users have something to compile against.
                    At runtime, they come from the io.smallrye.reactive.messaging.connector.kafka and
                    org.eclipse.microprofile.reactive-messaging.api (which contans the smallrye-reactive-messaging-api
                    jar)
                -->
                <exclude path="io/smallrye"/>
            </filter>
        </artifact>
        <artifact name="${org.wildfly:wildfly-microprofile-reactive-messaging-kafka-bridge}"/>
    </resources>

    <dependencies>
        <module name="io.smallrye.reactive.messaging.connector.kafka"/>
        <module name="javax.enterprise.api" />
        <module name="org.apache.kafka.client"/>
        <!-- This contains the SmallRye API rather than the spec API jar for now -->
        <module name="org.eclipse.microprofile.reactive-messaging.api"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.weld.core"/>
        <module name="org.jboss.weld.spi"/>
        <module name="org.jboss.weld.api"/>
    </dependencies>
</module>